

<div class="misc-wrapper">
    <div class="misc-content">
        <div class="container">
            <div class="row justify-content-center">
               <div class="col-md-4 col-xs-12">
                    <div class="misc-header text-center" style="color:white">
                      <%= flash[:notice] %>
                    </div>
                    <div class="misc-box">

                      <%= form_tag search_path, :controller => 'shipments', :action => 'show', :method => 'get',:class=>"pull-right" do %>
                        

                        <div class="form-group">
                            <label>Enter Your Track Number</label><br />
                            <div class="group-icon">
                              <%= text_field_tag :track_number, "", class: 'form-control',placeholder: "Enter Your Track Number" %>
                            </div>
                        </div>
                        <div class="clearfix">
                          <%= submit_tag 'Search',:class=>"btn btn-block btn-primary btn-rounded box-shadow"%>
                        </div>

                      <% end %>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</div>